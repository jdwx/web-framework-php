{
  "name": "jdwx/web-framework",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "JDWX\\Web\\Framework\\": "src/"
    }
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "jetbrains/phpstorm-attributes": "^1.0",
    "phan/phan": "^v5",
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^12"
  },
  "require": {
    "php": ">=8.3.0",
    "jdwx/web": "^3.0",
    "jdwx/web-pages": "^1.0"
  },
  "scripts": {
    "phan": "PHAN_ALLOW_XDEBUG=1 php -d xdebug.mode=off vendor/bin/phan --no-progress-bar -S --analyze-twice",
    "phpstan": "php -d xdebug.so vendor/bin/phpstan --no-progress",
    "test": "vendor/bin/phpunit tests"
  }
}
